- var containerCss = '';
if (gcitem.attributes.containerCss)
    each val, key in gcitem.attributes.containerCss
        - if (val!='') containerCss += key + ':' + val + ';'
- var css = '';
if (gcitem.attributes.css)
    each val, key in gcitem.attributes.css
        - if (val!='') css += key + ':' + val + ';'
div(
    id="#{gcitem.id}_{{$index}}",
    ng-show = (gcitem.attributes.display.value == '' ? undefined : "#{gcitem.attributes.display.value}"),
    style=('position:relative;' + (gcitem.attributes.containerStyle ? gcitem.attributes.containerStyle.value : '') + ';' + containerCss),
    class="#{gcitem.attributes.containerClasses.value}",
    ng-class = (gcitem.attributes.containerDynamicClasses.value == '' ? undefined : "#{gcitem.attributes.containerDynamicClasses.value}")
    )
        div(
            id="#{gcitem.id}_chart_{{$index}}",
            name = (gcitem.attributes.name.value == '' ? undefined : "#{gcitem.attributes.name.value}"),
            class = (!gcitem.attributes.classes || gcitem.attributes.classes.value == '' ? '' : "#{gcitem.attributes.classes.value}"),
            style = (gcitem.attributes.style.value + ';' + css),
            dfx-chart,
            data-ac-chart = (gcitem.attributes.type.value == '' ? "'line'" : "'#{gcitem.attributes.type.value}'"),
            data-ac-data = (gcitem.attributes.property.value == '' ? "data" : "#{gcitem.attributes.property.value}"),
            data-ac-config = "config",
            label = "#{gcitem.attributes.label.value}",
            label-visible = "#{gcitem.attributes.labelVisible.value}",
            legend-position = "#{gcitem.attributes.legendPosition.value}",
            legend-visible = "#{gcitem.attributes.legendVisible.value}",
            labels-data-points = "#{gcitem.attributes.labelsDataPoints.value}",
            tooltips = "#{gcitem.attributes.tooltips.value}",
            inner-radius = (gcitem.attributes.innerRadius.value == '' ? undefined : "#{gcitem.attributes.innerRadius.value}"),
            chart-click = (gcitem.attributes.onclick.value == '' ? undefined : "#{gcitem.attributes.onclick.value}"),
            chart-mouseover = (gcitem.attributes.onmouseover.value == '' ? undefined : "#{gcitem.attributes.onmouseover.value}"),
            chart-mouseout = (gcitem.attributes.onmouseout.value == '' ? undefined : "#{gcitem.attributes.onmouseout.value}")
            )
