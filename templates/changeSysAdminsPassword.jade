doctype html
html
    head
        meta(http-equiv="content-type", content="text/HTML;charset=UTF-8")
        meta(name="viewport", content="width=device-width,initial-scale=1")
        title DreamFace Studio
        link(rel="stylesheet", href="/css/console/dfx.min.css", media="screen")
        script(src="/js/console/dfx.js")
    body#dfx-console
        div.panel
        img(src="/images/df_LogoConsole.png")
        h1 DreamFace&nbsp;
            span X
            | -Platform
            small(style="padding-left:10px") version #{version}
        div.panel.panel-primary
            div.panel-heading
                h3.panel-title
                    span.fa.fa-lg.fa-asterisk
                    | &nbsp;Changing password to DreamFace Console
            form#changePassword.panel-body.form(style="padding: 10px;", action="/console/changepassword", method="post", role="form")
                fieldset
                    div.form-group.clearfix
                        div.col-sm-3
                            input.form-control#oldPassword(type="password", required, autofocus, placeholder="current password",  name="oldPassword")
                    div.form-group.clearfix
                        div.col-sm-3
                            input.form-control#newPassword1(type="password", required, placeholder="new password", name="garbage")
                    div.form-group.clearfix
                        div.col-sm-3
                            input.form-control#newPassword2(type="password", required, placeholder="repeat new password", name="newPassword")
                    div.form-group.clearfix
                        div.col-sm-3
                            a.btn.btn-default.pull-right(href='/console', style="margin-left:10px;")
                                span.fa.fa-lg.fa-arrow-left
                                span(style="padding-left:5px") Back
                            button.btn.btn-info.pull-right(type="button", , onClick="DfxConsole.changePassword();")
                                span.fa.fa-lg.fa-asterisk
                                span(style="padding-left:5px") Change
        footer.dfx_studio_login
            div.dfx-logo
                img(src="/images/df_LogoLoginFooter.png")
            p Copyright &copy; Interactive Clouds, all rights reserved.