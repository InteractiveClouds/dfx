                        option(value="10") 10
                        option(value="11") 11
                        option(value="12") 12
            div.form-group
                label.col-xs-4.control-label Orientation:
                div.col-xs-8
                    select#gc_layout_column_attr_orientation.input-xs.dfx_visual_editor_property_input(size="1")
                        option(value="horizontal") horizontal
                        option(value="vertical") vertical
            div.form-group
                label.col-xs-4.control-label Alignment:
                div.col-xs-8
                    select#gc_layout_column_attr_alignment.input-xs.dfx_visual_editor_property_input(size="1")
                        option(value="start") start
                        option(value="center") center
                        option(value="end") end
            div.form-group
                label.col-xs-4.control-label Disposition:
                div.col-xs-8
                    select#gc_layout_column_attr_disposition.input-xs.dfx_visual_editor_property_input(size="1")
