            div.form-group
                label.col-xs-4.control-label Column Classes:
                div.col-xs-8
                    div.input-group
                        input#gc_layout_column_attr_classes.form-control.input-xs.dfx_visual_editor_property_input(type="text")
                        span.input-group-btn
                            a#btnPickClasses.btn.btn-default(href="#", data-toggle="modal", data-target="#pickerValueModal", data-vb-picker="class", data-vb-picker-target="gc_layout_column_attr_classes") ...
            div.form-group
                label.col-xs-4.control-label Dynamic Classes:
                div.col-xs-8
                    div.input-group
                        input#gc_layout_column_attr_dynamicClasses.form-control.input-xs.dfx_visual_editor_property_input(type="text")
