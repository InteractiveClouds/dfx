div.panel(style="position: fixed;top: 233px;right: 0;width: 349px;padding: 5px;bottom: 20px;overflow-y: auto;")
    form.form-horizontal
        div.col-xs-12
            a#layout_container_link(href="javascript:void(0)") Panel
            span(style="padding-left:10px;padding-right:10px;") &gt;
            a#layout_link(href="javascript:void(0)") Layout
            span(style="padding-left:10px;padding-right:10px;") &gt;
