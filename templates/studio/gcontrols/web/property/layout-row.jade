                            a#btnPickLayoutClasses.btn.btn-default(href="#", data-toggle="modal", data-target="#pickerValueModal", data-vb-picker="class", data-vb-picker-target="gc_layout_row_attr_classes") ...
            div.form-group
                label.col-xs-4.control-label Dynamic Classes:
                div.col-xs-8
                    div.input-group
                        input#gc_layout_row_attr_dynamicClasses.form-control.input-xs.dfx_visual_editor_property_input(type="text")
                        span.input-group-btn
                            a#btnPickPropertyDynClasses.btn.btn-default(href="#",data-toggle="modal", data-target="#pickerValueModal", data-vb-picker="exp", data-vb-picker-target="gc_layout_row_dynamicClasses") ...
            div.form-group
                label.col-xs-4.control-label Height:
                div.col-xs-8
                    input#gc_layout_row_attr_css_height.input-xs.dfx_visual_editor_property_input(type="text", style="width:80px")
