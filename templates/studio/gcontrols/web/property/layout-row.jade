            label.col-xs-3.control-label Columns:
            div.col-xs-9
                div#layout_manager.col-md-12
        legend
            a.dfx_visual_editor_property_collapsible_btn.collapsed(data-toggle="collapse", data-target="#container_css_props") Layout Row CSS
        div#container_css_props.collapse
            div.form-group
                label.col-xs-4.control-label Row Classes:
                div.col-xs-8
                    div.input-group
                        input#gc_layout_row_attr_classes.form-control.input-xs.dfx_visual_editor_property_input(type="text")
