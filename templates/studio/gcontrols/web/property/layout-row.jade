                label.col-xs-4.control-label Color:
                div.col-xs-8
                    .input-group#layoutRowColorPicker.fgcolor
                        span.input-group-addon.color-picker(style="padding:3px")
                            i(style="border:1px solid #b0b0b0")
                        input#gc_layout_row_attr_css_color.input-xs.dfx_visual_editor_property_input(type="text", style="width:80px")
            div.form-group
                label.col-xs-4.control-label Background:
                div.col-xs-8
                    .input-group#layoutRowBgcolorPicker.fgcolor
                        span.input-group-addon.color-picker(style="padding:3px")
                            i(style="border:1px solid #b0b0b0")
                        input#gc_layout_row_attr_css_background.input-xs.dfx_visual_editor_property_input(type="text", style="width:80px")
            div.form-group
                label.col-xs-4.control-label Custom CSS:
                div.col-xs-8
                    input#gc_layout_row_attr_style.input-xs.dfx_visual_editor_property_input(type="text")
