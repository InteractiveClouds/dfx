    body#dfx-studio-body(data-tenantid="#{tenantid}", data-username="#{username}")
        div.dfx_content
        footer#dfx_visual_editor_footer
            div Copyright &copy; Interactive Clouds, all rights reserved.
        div#dfx_visual_editor_help.modal.fade(tabindex="-1", role="dialog", aria-labelledby="Help", aria-hidden="true")
            div.modal-dialog
                div.modal-content
                    div.modal-header.modal-header-primary
                        button.close(type="button", data-dismiss="modal", aria-hidden="true") Ã—
                        span.icon.icon-question
                        span(style="margin-left:5px") Help
                    div.modal-body
                        div.list-group
                            a.list-group-item(href="javascript:DfxStudio.helpWidgetScript({item:'module'});")
                                h4.list-group-item-heading Declare Module
                                p.list-group-item-text.
                                    Add to your script the Angular module declaration associated to your widget
                            a.list-group-item(href="javascript:DfxStudio.helpWidgetScript({item:'controller'});")
                                h4.list-group-item-heading Add Controller
                                p.list-group-item-text.
                                    Add to your script an Angular controller declaration associated to your widget
                            a.list-group-item(href="javascript:DfxStudio.helpWidgetScript({item:'function'});")
                                h4.list-group-item-heading Add Function
                                p.list-group-item-text.
                                    Add to your script an Angular function declaration associated to your controller
                            a.list-group-item(href="javascript:DfxStudio.helpWidgetScript({item:'dataquery'});")
                                h4.list-group-item-heading Call a DataQuery
                                p.list-group-item-text.
                                    Add to your script a DreamFace DataQuery call
                    div.modal-footer
                        button#dfx_visual_editor_help_close.btn.btn-default.pull-left(type="button", data-dismiss="modal") Close
