div
    h4 Buttons
    div
        form#buttonsForm(action="javascript:void(0);", style="margin-top:10px")
            fieldset
                div.form-group.col-lg-6
                    label(for="fldId") Id:
                    input#fldId.form-control(type="text", data-inputname="id", placeholder="id")
                div.form-group.col-lg-6
                    label(for="fldLabel") Label:
                    input#fldLabel.form-control(type="text", data-inputname="label", placeholder="label")
                div.form-group.col-lg-6
                    label(for="fldMarkup") Markup:
                    select#fldMarkup.form-control(data-inputname="markup")
                        option(value="Anchor") Anchor
                        option(value="Button", selected) Button
                        option(value="Input") Input
                        option(value="Submit") Submit
                        option(value="Reset") Reset
                div.form-group.col-lg-6
                    label(for="fldInline") Inline:
                    select#fldInline.form-control(data-inputname="inline")
                        option(value="true") True
                        option(value="false", selected) False
                div.form-group.col-lg-6
                    label(for="fldTheme") Theme:
                    select#fldTheme.form-control(data-inputname="theme")
                        option(value="A", selected) A
                        option(value="B") B
                        option(value="C") C
                        option(value="D") D
                        option(value="E") E
                div.form-group.col-lg-6
                    label(for="fldMini") Mini:
                    select#fldMini.form-control(data-inputname="mini")
                        option(value="true") True
                        option(value="false", selected) False
                div.form-group.col-lg-6
                    label(for="fldIcon") Icon:
                    select#fldIcon.form-control(data-inputname="icon")
                        option(value="", selected)
                        option(value="plus") plus
                        option(value="minus") minus
                        option(value="delete") delete
                        option(value="arrow-l") arrow-l
                        option(value="arrow-r") arrow-r
                        option(value="arrow-u") arrow-u
                        option(value="arrow-d") arrow-d
                        option(value="plus") check
                        option(value="gear") gear
                        option(value="refresh") refresh
                        option(value="forward") forward
                        option(value="back") back
                        option(value="grid") grid
                        option(value="star") star
                        option(value="alert") alert
                        option(value="info") info
                        option(value="home") home
                        option(value="search") search
                        option(value="bars") bars
                        option(value="edit") edit
                div.form-group.col-lg-6
                    label(for="fldIconPos") Icon Position:
                    select#fldIconPos.form-control(data-inputname="iconPosition")
                        option(value="", selected)
                        option(value="left") left
                        option(value="right") right
                        option(value="top") top
                        option(value="bottom") bottom
                        option(value="notext") notext
                div.form-group.col-lg-6
                    label(for="fldVerticalGroup") Vertical Group:
                    select#fldVerticalGroup.form-control(data-inputname="verticalGroup")
                        option(value="true") True
                        option(value="false", selected) False
                div.form-group.col-lg-6
                    label(for="fldHorizontalGroup") Horizontal Group:
                    select#fldHorizontalGroup.form-control(data-inputname="horizontalGroup")
                        option(value="true") True
                        option(value="false", selected) False
                