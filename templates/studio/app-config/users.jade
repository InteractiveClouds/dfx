div#dfxUsersPanel.panel.panel-default.collapsed
    div.panel-heading
        div.col-sm-6
            h3
                span.badge.badge-primary #{nbusers}
                | &nbsp;Application Users&nbsp;
                span.fa.fa-lg.fa-angle-right
        div.col-sm-6
            form.form-inline(method="get", user="form", onsubmit="return false;")
                div.form-group.col-xxl-9.col-xl-9.col-lg-8.col-md-7
                    div.input-group(style="width: 100%;")
                        input#fldUserName.form-control(type="text", placeholder="Search an application user", aria-describedby="component-search-button")
                        span#component-search-button.input-group-addon.btn-info(style="width: 1%;")
                            span.fa.fa-lg.fa-search(type="button", title="Search an application user", data-toggle="tooltip", data-placement="right", onclick="DfxStudio.Home.ApplicationUsers.search({applicationName: '#{applicationName}'});", style="border: none;")

                div.form-group.pull-right
                    span.fa.fa-2x.fa-plus(type="button", title="Create user", data-toggle="tooltip", data-placement="right", onclick="DfxStudio.Home.ApplicationUsers.create('#{applicationName}');", style="border: none;")
        div.clearfix
    div#dfx_user_search_result.panel-body(style="padding-top: 20px; display: none;")
        table.table.table-condensed.table-thick-bordered(style="margin-bottom: 0;")
            col(width="27%")
            col(width="27%")
            col(width="26%")
            col(width="20%")
            thead
                tr
                    th(style="padding-left:20px") Login
                    th First Name
                    th Last Name
                    th Action
        div.users-table(style="overflow: hidden;")
            table.table.table-condensed.table-thick-bordered
                col(width="27%")
                col(width="27%")
                col(width="26%")
                col(width="20%")
                tbody#dfx_user_search_result_body
