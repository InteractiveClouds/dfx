div#dfxRolesPanel.panel.panel-default.collapsed
    div.panel-heading
        div.col-sm-6
            h3
                span.badge.badge-primary #{nbroles}
                | &nbsp;Application Roles&nbsp;
                span.fa.fa-lg.fa-angle-right
        div.col-sm-6
            form.form-inline(method="get", role="form", onsubmit="return false;")
                div.form-group.col-xxl-9.col-xl-9.col-lg-8.col-md-7
                    div.input-group(style="width: 100%;")
                        input#fldRoleName.form-control(type="text", placeholder="Search a role", aria-describedby="component-search-button")
                        span#component-search-button.input-group-addon.btn-info(style="width: 1%;")
                            span.fa.fa-lg.fa-search(type="button", title="Search a role", data-toggle="tooltip", data-placement="right", onclick="DfxStudio.Home.ApplicationRoles.search({applicationName: '#{applicationName}'});", style="border: none;")
                div.form-group.pull-right
                    span.fa.fa-2x.fa-plus(type="button", title="Create role", data-toggle="tooltip", data-placement="right", onclick="DfxStudio.Home.ApplicationRoles.create('#{applicationName}');", style="border: none;")
        div.clearfix
    div#dfx_role_search_result.panel-body(style="padding-top: 20px; display: none;")
        table.table.table-condensed.table-thick-bordered(style="margin-bottom: 0;")
            col(width="30%")
            col(width="50%")
            col(width="20%")
            thead
                tr
                    th(style="padding-left:20px") Name
                    th Description
                    th Action
        div.roles-table(style="overflow: hidden;")
            table.table.table-condensed.table-thick-bordered
                col(width="30%")
                col(width="50%")
                col(width="20%")
                tbody#dfx_role_search_result_body
