div#dfxComponentsPanel.panel.panel-default.collapsed
    div.panel-heading
        div.col-sm-6
            h3
                | &nbsp;Cloud Platform Components&nbsp;
                span.fa.fa-lg.fa-angle-right
        div.col-sm-6
            form.form-inline(method="get", role="form", onsubmit="return false;")
                div.input-group(style="width: 100%;")
                    input#fldComponentName.form-control(type="text", placeholder="Search a component", aria-describedby="component-search-button")
                    span#component-search-button.input-group-addon.btn-info(style="width: 1%;")
                        span.fa.fa-lg.fa-search(type="button", title="Search a component", data-toggle="tooltip", data-placement="right", onclick="DfxStudio.Home.CloudPlatform.searchComponent();", style="border: none;")
        div.clearfix
    div#dfx_component_search_error.panel-body(style="padding-top: 20px; display: none;")
        p The search criteria cannot be empty. Please enter at least one character.
    div#dfx_component_search_not_found.panel-body(style="padding-top: 20px; display: none;")
        p Nothing found matching your search criteria.
    div#dfx_component_search_result.panel-body(style="padding-top: 20px; display: none;")
        div.search-result
            h4
                span.dfs_content_title_2 Views
            table.table.table-condensed.table-thick-bordered(style="margin-bottom: 0;")
                col(width="15%")
                col(width="15%")
                col(width="15%")
                col(width="10%")
                col(width="25%")
                col(width="20%")
                thead
                    tr
                        th(style="padding-left:20px") Name
                        th Application
                        th Category
                        th Type
                        th Description
                        th Action
                tbody#dfx_widget_search_result_body
        div.search-result
            h4(style="margin-top: 30px;")
                span.dfs_content_title_2 API Routes
            table.table.table-condensed.table-thick-bordered(style="margin-bottom: 0;")
                col(width="15%")
                col(width="15%")
                col(width="15%")
                col(width="35%")
                col(width="20%")
                thead
                    tr
                        th(style="padding-left:20px") Name
                        th Application
                        th Category
                        th Description
                        th Action
                tbody#dfx_query_search_result_body
        div.search-result
            h4(style="margin-top: 30px;")
                span.dfs_content_title_2 Pages
            table.table.table-condensed.table-thick-bordered(style="margin-bottom: 0;")
                col(width="15%")
                col(width="15%")
                col(width="15%")
                col(width="35%")
                col(width="20%")
                thead
                    tr
                        th(style="padding-left:20px") Name
                        th Application
                        th Category
                        th Title
                        th Action
                tbody#dfx_screen_search_result_body
        div.search-result
            h4(style="margin-top: 30px;")
                span.dfs_content_title_2 Menu Items
            table.table.table-condensed.table-thick-bordered(style="margin-bottom: 0;")
                col(width="15%")
                col(width="15%")
                col(width="15%")
                col(width="35%")
                col(width="20%")
                thead
                    tr
                        th(style="padding-left:20px") Name
