div#dfxWidgetsPanel.panel.panel-default.collapsed
    div.panel-heading
        div.col-sm-6
            h3
                span.badge.badge-primary #{nbwidgets}
                | &nbsp;View Catalog&nbsp;
                span.fa.fa-lg.fa-angle-right
        div.col-sm-6
            form.search-components.form-inline(method="get", role="form", onsubmit="return false;")
                div.form-group.col-xxl-9.col-xl-9.col-lg-8.col-md-7
                    div.input-group(style="width: 100%;")
                        input#fldWidgetName.form-control(type="text", placeholder="Search a view", aria-describedby="component-search-button")
                        span#component-search-button.input-group-addon.btn-info(style="width: 1%;")
                            span.fa.fa-lg.fa-search(type="button", title="Search a views", data-toggle="tooltip", data-placement="right", onclick="DfxStudio.Home.Widgets.searchWidget({applicationName: '#{applicationName}'});", style="border: none;")
                div.form-group.pull-right
                    span.fa.fa-2x.fa-plus(type="button", title="Create view", data-toggle="tooltip", data-placement="right", onclick="DfxStudio.Dispatcher.run('#!/home/#{applicationName}/widgets/create');")
        div.clearfix
    div#dfx_widget_search_result.panel-body(style="padding-top: 20px; display: none;")
        table.table.table-condensed.table-thick-bordered(style="margin-bottom: 0;")
            col(width="20%")
            col(width="20%")
            col(width="15%")
            col(width="10%")
            col(width="20%")
            col(width="15%")
            thead
                tr
                    th(style="padding-left:20px") Name
                    th Application
                    th Category
                    th Type
                    th Description
                    th Action
        div.widgets-table(style="overflow: hidden;")
            table.table.table-condensed.table-thick-bordered
                col(width="20%")
                col(width="20%")
                col(width="15%")
                col(width="10%")
                col(width="20%")
                col(width="15%")
                tbody#dfx_widget_search_result_body
